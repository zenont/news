{
	"extends": [
		"tslint:latest",
		"tslint-react"
	],
	"rulesDirectory": [],
	"rules": {
		"indent": [
			true,
			"tabs"
		],
		"curly": [
			true,
			"ignore-same-line"
		],
		"semicolon": [
			true,
			"never"
		],
		"quotemark": [
			true,
			"single",
			"jsx-double"
		],
		"max-line-length": [
			true,
			150
		],
		"no-unused-variable": [
			true
		],
		"no-unused-expression": [
			true
		],
		"new-parens": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": false,
		"no-console": [
			true,
			"debug",
			"info",
			"log",
			"time",
			"timeEnd",
			"trace"
		],
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-leading-underscore"
		],
		"no-empty-interface": false,
		"object-literal-sort-keys": [
			false
		],
		"ordered-imports": [
			true,
			{
				"import-sources-order": "any",
				"named-imports-order": "lowercase-last"
			}
		],
		"trailing-comma": [
			false,
			{
				"singleline": "never",
				"multiline": {
					"objects": "ignore",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				}
			}
		],
		"arrow-parens": [
			false
		],
		"max-classes-per-file": [
			true,
			10
		],
		"no-duplicate-super": false,
		"jsx-no-lambda": false,
		"no-submodule-imports": [
			true,
			"rxjs",
			"react-intl"
		],
		"interface-over-type-literal": false,
		"jsRules": {
			"max-line-length": {
				"options": [
					150
				]
			}
		},
		"no-implicit-dependencies": [
			true,
			"dev"
		],
		"jsx-boolean-value":[
			false
		]
	}
}
